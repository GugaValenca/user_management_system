DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Preferred: full connection string (Neon/Postgres/MySQL)
# Example: postgresql://user:password@host/dbname?sslmode=require
DATABASE_URL=

# CORS / CSRF (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database options
# Use sqlite (default) or mysql
DB_ENGINE=sqlite
SQLITE_PATH=db.sqlite3

# MySQL (only used when DB_ENGINE=mysql)
DB_NAME=user_management_db
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306

# PostgreSQL (only used when DB_ENGINE=postgres and DATABASE_URL is empty)
# DB_ENGINE=postgres
# DB_NAME=neondb
# DB_USER=neondb_owner
# DB_PASSWORD=
# DB_HOST=your-neon-host.neon.tech
# DB_PORT=5432
# DB_SSLMODE=require
# DB_CHANNEL_BINDING=require

# Production security
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
